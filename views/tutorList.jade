html 
    head
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        title tutor List
        link(rel='stylesheet', href='/stylesheets/tutorList.css')
    body 
        nav(class="nav")
                div(class="menu_group")
                    div(class="home")
                        a(href="../")
                            img(src="https://i.ibb.co/ZSJQwCr/home-page.pngg" alt="home" style="width:30px;height:30px;")
                    div(class="current")
                        a(id="1" href="./") 튜터 찾기
                    div(class="other")
                        a(id="2" href="../post/") 질문/답변
                    div(class="other") 
                        a(id="3" href="../findPost/") 찾아요
                    div(class="other")
                        a(id="4" href="../tutoringList/") 멘토링 목록
                    div(class="other")
                        a(id="5" href="../requestList/") 받은 요청
                    div(class="other")
                        a(id="6" href="../sendList/") 보낸 요청
        div(class="profileBox")
            div(class="searchSector")
                h4 College
                div(class="inputBox")
                    div(class="inputDiv")
                        input(type="checkBox" id="label1" onClick="checkBox(this.id)")
                        label(class="label1") Engineering
                    div(class="inputDiv")
                        input(type="checkBox" id="label2" onClick="checkBox(this.id)")
                        label(class="label2") Information and Technology
                    div(class="inputDiv")
                        input(type="checkBox" id="label3" onClick="checkBox(this.id)")
                        label(class="label3") Computings and Informatics
                    div(class="inputDiv")
                        input(type="checkBox" id="label4" onClick="checkBox(this.id)")
                        label(class="label4") Natural Sciences
                    div(class="inputDiv")
                        input(type="checkBox" id="label5" onClick="checkBox(this.id)")
                        label(class="label5") Business
                    div(class="inputDiv")
                        input(type="checkBox" id="label6" onClick="checkBox(this.id)")
                        label(class="label6") Humanities
                    div(class="inputDiv")
                        input(type="checkBox" id="label7" onClick="checkBox(this.id)")
                        label(class="label7") Social Science
                h4 Country
                div(class="inputBox")
                    div(class="inputDiv2")
                        input(type="checkBox" id="label1#c" onClick="checkBox2(this.id)")
                        label(class="label1#c") Korea
                    div(class="inputDiv2")
                        input(type="checkBox" id="label2#c" onClick="checkBox2(this.id)")
                        label(class="label2#c") Vietnam
                    div(class="inputDiv2")
                        input(type="checkBox" id="label3#c" onClick="checkBox2(this.id)")
                        label(class="label3#c") China
            div(class="profiles")
                -if(rows!=null)
                    -for(var i=0;i<rows.length;i++)
                        div(id= "#{rows[i].id}" class="profileCard" onClick="showDetailPage(this.id)")
                            div(class="topCard")
                                img(src="https://ajoring.kr/"+"#{rows[i].profileImage}" class="mountImage")
                                div(class="UserSector")
                                    div(class="nickname")
                                        h4 #{rows[i].nickname}
                                    div(class="email")
                                        h4 #{rows[i].email}
                            div(class="bottomCard")
                                div(class="department")
                                    h4 #{rows[i].department}
                                div(class="countryText")
                                    h4 #{rows[i].country}
                            
        div(class="myProfile")
            img(src="https://ajoring.kr/"+"#{user.profileImage}" class="profileIcon")
            a(id="7" href="../myProfile/") 내 프로필

    script(type="text/javascript").
        let id;
        const checkBox = (value) => {
            var thisBox = document.getElementById(value);
            var box2, box3, box4, box5, box6, box7;
            switch(value){
                case "label1" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label4');
                    box5 = document.getElementById('label5');
                    box6 = document.getElementById('label6');
                    box7 = document.getElementById('label7');
                    break;
                }
                case "label2" : {
                    box2 = document.getElementById('label1');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label4');
                    box5 = document.getElementById('label5');
                    box6 = document.getElementById('label6');
                    box7 = document.getElementById('label7');
                    break;
                }
                case "label3" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label1');
                    box4 = document.getElementById('label4');
                    box5 = document.getElementById('label5');
                    box6 = document.getElementById('label6');
                    box7 = document.getElementById('label7');
                    break;
                }
                case "label4" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label1');
                    box5 = document.getElementById('label5');
                    box6 = document.getElementById('label6');
                    box7 = document.getElementById('label7');
                    break;
                }
                case "label5" : {
                    box2 = document.getElementById('label1');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label4');
                    box5 = document.getElementById('label1');
                    box6 = document.getElementById('label6');
                    box7 = document.getElementById('label7');
                    break;
                }
                case "label6" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label1');
                    box4 = document.getElementById('label4');
                    box5 = document.getElementById('label5');
                    box6 = document.getElementById('label1');
                    box7 = document.getElementById('label7');
                    break;
                }
                case "label7" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label1');
                    box5 = document.getElementById('label5');
                    box6 = document.getElementById('label6');
                    box7 = document.getElementById('label1');
                    break;
                }
                
            }

            if(thisBox.checked==true) {
                box2.checked = false;
                box3.checked = false;
                box4.checked = false;
                box5.checked = false;
                box6.checked = false;
                box7.checked = false;
            }
            var keyword = document.querySelector("div.searchSector").getElementsByClassName(value)[0].innerHTML.toLowerCase();
            var currentlist = document.getElementsByClassName('profileCard');
            if(thisBox.checked) {
                var newlist = document.getElementsByClassName('profileCard');
                for(var i = 0; i<newlist.length;i++) {
                    var department = newlist[i].getElementsByClassName('department')[0].innerHTML;
                    var searchResult = department.toLowerCase();
                    console.log(searchResult)
                        if(searchResult.indexOf(keyword) != -1) {
                            newlist[i].style.display = "flex";
                        } else {
                            newlist[i].style.display = "none";
                        }
                }
            } else {
                for(var i = 0; i<currentlist.length;i++) {
                    currentlist[i].style.display = "flex";
                }
            }
        }

        const checkBox2 = (value) => {
            var thisBox = document.getElementById(value);
            var box2, box3;
            switch(value){
                case "label1#c" : {
                    box2 = document.getElementById('label2#c');
                    box3 = document.getElementById('label3#c');
                    break;
                }
                case "label2#c" : {
                    box2 = document.getElementById('label1#c');
                    box3 = document.getElementById('label3#c');
                    break;
                }
                case "label3#c" : {
                    box2 = document.getElementById('label2#c');
                    box3 = document.getElementById('label1#c');
                    break;
                }
            }

            if(thisBox.checked==true) {
                box2.checked = false;
                box3.checked = false;
            }
            var keyword = document.querySelector("div.searchSector").getElementsByClassName(value)[0].innerHTML.toLowerCase();
            var currentlist = document.getElementsByClassName('profileCard');
            if(thisBox.checked) {
                var newlist = document.getElementsByClassName('profileCard');
                for(var i = 0; i<newlist.length;i++) {
                    var country = newlist[i].getElementsByClassName('countryText')[0].innerHTML;
                    var searchResult = country.toLowerCase();
                        if(searchResult.indexOf(keyword) != -1) {
                            newlist[i].style.display = "flex";
                        } else {
                            newlist[i].style.display = "none";
                        }
                }
            } else {
                for(var i = 0; i<currentlist.length;i++) {
                    currentlist[i].style.display = "flex";
                }
            }
        }
        const searchUser = (keyword) => {
            var newlist = document.getElementsByClassName('profileCard');
            for(var i = 0;i<newlist.length;i++) {
                var nickname = newlist[i].getElementsByClassName('nickname')
                var searchResult = nickname[0].innerHTML.toLowerCase();
                if(searchResult.indexOf(keyword) != -1) {
                    newlist[i].style.display = "flex";
                } else {
                    newlist[i].style.display = "none";
                }
            }
        }
        const showDetailPage = (id) => {
             axios.get('https://ajoring.kr/user/getUserId',{
                    method: 'POST',
                    params: {
                        id : id,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                }}).then(response => {
                    document.location.href="./tutorDetail?userId="+response.data.User_id;
            })
            console.log(id.User_id);
        }
        const testTrans = () => {
            var lang = "#{user.country}"
            if(lang=="China") {
               var text = document.querySelector('div.menu_group').innerText;
               var text2 = document.querySelector('div.myProfile a').innerText;
               console.log(text);
                axios.get('https://ajoring.kr/translate',{
                    method: 'POST',
                    params: {
                        target : 'zh-CN',
                        text : text +'\n' + text2
                    },
                    headers: {
                        'Content-Type': 'application/json',
                    },
                }).then(response=> {
                    var list = response.data.message.result.translatedText.split('\n');
                    console.log(list);
                    for(var i = 1; i<= 7; i++) {
                        document.getElementById(i).textContent = list[i-1];
                    }
                })
            }  else if(lang=="Vietnam") {
                var text = document.querySelector('div.menu_group').innerText;
                var text2 = document.querySelector('div.myProfile a').innerText;
                    axios.get('https://ajoring.kr/translate',{
                        method: 'POST',
                        params: {
                            target : 'vi',
                            text : text +'\n' + text2
                        },
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    }).then(response=> {
                        var list = response.data.message.result.translatedText.split('\n');
                        for(var i = 1; i<= 7; i++) {
                            document.getElementById(i).textContent = list[i-1];
                        }
                    })
            }
        }
        testTrans();

            