html 
    head
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        title tutor List
        link(rel='stylesheet', href='/stylesheets/tutorList.css')
    body 
        nav(class="nav")
            ul(class="navbar__menu")
                div(class="home")
                    a(href="../")
                        img(src="https://i.ibb.co/mzbZKrX/home-page.png" alt="home" style="width:30px;height:30px;")
                div(class="menu_group")
                    div(class="current")
                        a(id="1" href="./") 튜터 찾기
                    div(class="other")
                        a(id="2" href="../post/") 질문/답변
                    div(class="other") 
                        a(id="3" href="../findPost/") 찾아요
                    div(class="other")
                        a(id="4" href="../tutoringList/") 멘토링 목록
                    div(class="other")
                        a(id="5" href="../requestList/") 받은 요청
                    div(class="other")
                        a(id="6" href="../sendList/") 보낸 요청
                    div(class="other")
                        a(id="7" href="../myProfile/") 내 프로필
        div(class="profileBox")
            div(class="profileArea")
                div(class="searchTutor")
                    h4 닉네임, 튜터 분야로 검색
                    input(class="searchInput" placeholder="닉네임이나 튜터 분야를 입력해주세요." onkeyup="searchUser(this.value)")
                    div(class="departmentOption")
                        h4 소속 학부
                        div(class="departments")
                            input(type="checkbox" id="label1" onClick="checkBox(this.id)")
                            label(class="label1") Social Sciences 
                            input(type="checkbox" id="label2" onClick="checkBox(this.id)")
                            label(class="label2") Computer Engineering
                            input(type="checkbox" id="label3" onClick="checkBox(this.id)")
                            label(class="label3") Mathematical
                            input(type="checkbox" id="label4" onClick="checkBox(this.id)")
                            label(class="label4") Human Sciences
                    div(class="countryOption")
                        h4 국가
                        div(class="country")
                            input(type="checkbox" id="label1#c" onClick="checkBox2(this.id)")
                            label(class="label1#c") Korea
                            input(type="checkbox" id="label2#c" onClick="checkBox2(this.id)") 
                            label(class="label2#c") China
                            input(type="checkbox" id="label3#c" onClick="checkBox2(this.id)") 
                            label(class="label3#c") Vietnam

                div(class="profiles")
                    -for(var i = 0; i<rows.length;i++)
                        button(id="#{rows[i].id}" class="profileCard" onClick="showDetailPage(this.id)")
                            div(class="area1")
                                img(src="http://localhost:3000/"+"#{rows[i].profileImage}" class="mountImage")
                                div(class="nickname")
                                    h4 nickname: #{rows[i].nickname}
                                div(class="email")  
                                    h4 email: #{rows[i].email}
                                div(class="countryText")  
                                    h4 country: #{rows[i].country}
                                div(class="name")                       
                                    h4 department: #{rows[i].department}

    script(type="text/javascript").
        let id;
        const checkBox = (value) => {
            var thisBox = document.getElementById(value);
            var box2, box3, box4;
            switch(value){
                case "label1" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label4');
                    break;
                }
                case "label2" : {
                    box2 = document.getElementById('label1');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label4');
                    break;
                }
                case "label3" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label1');
                    box4 = document.getElementById('label4');
                    break;
                }
                case "label4" : {
                    box2 = document.getElementById('label2');
                    box3 = document.getElementById('label3');
                    box4 = document.getElementById('label1');
                    break;
                }
            }

            if(thisBox.checked==true) {
                box2.checked = false;
                box3.checked = false;
                box4.checked = false;
            }
            var keyword = document.querySelector("div.departments").getElementsByClassName(value)[0].innerHTML.toLowerCase();
            var currentlist = document.getElementsByClassName('profileCard');
            if(thisBox.checked) {
                var newlist = document.getElementsByClassName('profileCard');
                for(var i = 0; i<newlist.length;i++) {
                    var department = newlist[i].getElementsByClassName('name')[0].innerHTML;
                    var searchResult = department.toLowerCase().split(': ')[1];
                    console.log(searchResult)
                        if(searchResult.indexOf(keyword) != -1) {
                            newlist[i].style.display = "flex";
                        } else {
                            newlist[i].style.display = "none";
                        }
                }
            } else {
                for(var i = 0; i<currentlist.length;i++) {
                    currentlist[i].style.display = "flex";
                }
            }
        }

        const checkBox2 = (value) => {
            var thisBox = document.getElementById(value);
            var box2, box3;
            switch(value){
                case "label1#c" : {
                    box2 = document.getElementById('label2#c');
                    box3 = document.getElementById('label3#c');
                    break;
                }
                case "label2#c" : {
                    box2 = document.getElementById('label1#c');
                    box3 = document.getElementById('label3#c');
                    break;
                }
                case "label3#c" : {
                    box2 = document.getElementById('label2#c');
                    box3 = document.getElementById('label1#c');
                    break;
                }
            }

            if(thisBox.checked==true) {
                box2.checked = false;
                box3.checked = false;
            }
            var keyword = document.querySelector("div.country").getElementsByClassName(value)[0].innerHTML.toLowerCase();
            var currentlist = document.getElementsByClassName('profileCard');
            if(thisBox.checked) {
                var newlist = document.getElementsByClassName('profileCard');
                for(var i = 0; i<newlist.length;i++) {
                    var country = newlist[i].getElementsByClassName('countryText')[0].innerHTML;
                    var searchResult = country.toLowerCase().split(': ')[1];
                    console.log(searchResult)
                        if(searchResult.indexOf(keyword) != -1) {
                            newlist[i].style.display = "flex";
                        } else {
                            newlist[i].style.display = "none";
                        }
                }
            } else {
                for(var i = 0; i<currentlist.length;i++) {
                    currentlist[i].style.display = "flex";
                }
            }
        }

        const validNameCheck = () => {
            var name = document.querySelector('div.name h4').textContent;
            if(name.indexOf('%20')!=-1){
                var text = name.split(': ')[1].split('%20');
                var newName = "";
                for(var i = 0; i<text.length;i++){
                    newName += text[i]+" ";
                }
                document.querySelector('div.name h4').textContent = name.split(': ')[0] + ': ' +newName;
            }
        }
        const searchUser = (keyword) => {
            var newlist = document.getElementsByClassName('profileCard');
            for(var i = 0;i<newlist.length;i++) {
                var nickname = newlist[i].getElementsByClassName('nickname')
                var searchResult = nickname[0].innerHTML.toLowerCase().split(': ')[1];
                if(searchResult.indexOf(keyword) != -1) {
                    newlist[i].style.display = "flex";
                } else {
                    newlist[i].style.display = "none";
                }
            }
        }
        const showDetailPage = (id) => {
             axios.get('http://localhost:3000/user/getUserId',{
                    method: 'POST',
                    params: {
                        id : id,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                }}).then(response => {
                    document.location.href="./tutorDetail?userId="+response.data.User_id;
            })
            console.log(id.User_id);
        }
        const testTrans = () => {
            var lang = "#{lang}"
            if(lang=="China") {
               var text = document.querySelector('div.menu_group').innerText;
                axios.get('http://localhost:3000/translate',{
                    method: 'POST',
                    params: {
                        target : 'zh-CN',
                        text : text
                    },
                    headers: {
                        'Content-Type': 'application/json',
                    },
                }).then(response=> {
                    var list = response.data.message.result.translatedText.split('\n');
                    for(var i = 1; i<= 6; i++) {
                        document.getElementById(i).textContent = list[i-1];
                    }
                })
            } else if(lang=="French") {
                var text = document.querySelector('div.menu_group').innerText;
                    axios.get('http://localhost:3000/translate',{
                        method: 'POST',
                        params: {
                            target : 'fr',
                            text : text
                        },
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    }).then(response=> {
                        var list = response.data.message.result.translatedText.split('\n');
                        for(var i = 1; i<= 6; i++) {
                            document.getElementById(i).textContent = list[i-1];
                        }
                    })
            } else if(lang=="Vietnam") {
                var text = document.querySelector('div.menu_group').innerText;
                    axios.get('http://localhost:3000/translate',{
                        method: 'POST',
                        params: {
                            target : 'vi',
                            text : text
                        },
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    }).then(response=> {
                        var list = response.data.message.result.translatedText.split('\n');
                        for(var i = 1; i<= 6; i++) {
                            document.getElementById(i).textContent = list[i-1];
                        }
                    })
            }
        }
        testTrans();
        validNameCheck();

            